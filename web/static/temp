}

/* center uses absolute positioning for perfect centering */
.toolbar-center {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    font-size: 20px;
    font-weight: bold;
    pointer-events: none; /* keep clicks on buttons working */
}

/* Menu icon in toolbar */
.menu-button {
